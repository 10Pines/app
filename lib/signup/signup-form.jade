form(action="/auth/local", method="post")
  ul.form-errors
  .form-group
    label Email
    input(type='email', name='email', placeholder="example@abc.com")
  .form-group
    label Your name
    input(type='text', name='fullname', placeholder="first and last name")
  .form-group
    label Pick a username
    input(type='text', name='username', placeholder="")
  .form-group
    label Password
    input(type='password', name='password', placeholder="Password")
  .form-group
    label Re-type password
    input(type='password', name='re_password', placeholder="Repeat Password")
  .form-group: input(type='submit', value='Signup now!')
