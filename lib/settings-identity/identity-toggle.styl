/**
 * Toggle UI
 *
 * div.toggle.on
 *   label.toggle-on-label
 *   div.toggle-switch
 *   label.toggle-off-label
 */

.toggle
  position: relative
  display: inline-block
  overflow: hidden
  height: 3em
  width: 7.6em
  border-radius: 3em
  transition: background .2s ease-in, color .2s ease-in
  cursor: pointer
  &.on
    color: white
    background: #111
    .toggle-switch
      margin-left: -3em
      left: 100%
    .toggle-off-label
      transform: translateX(100%)
  &.off
    color: #bbb
    background: #eaeaea
    .toggle-on-label
      transform: translateX(-100%)

.toggle-on-label,
.toggle-off-label
  position: absolute
  height: 3em
  font: 300 1em/3em "Helvetica Neue", Helvetica, sans-serif
  text-align: center
  transition: transform .2s ease-in
  user-select: none
  cursor: pointer

.toggle-on-label
  right: 3em
  left: 0

.toggle-off-label
  right: 0
  left: 3em

.toggle-switch
  position: absolute
  left: 0
  top: 0
  height: 3em
  width: 3em
  border-radius: 3em
  background-color: white
  background-color: rgba(255, 255, 255, 0.98)
  background-clip: padding-box
  border: 2px solid transparent
  box-sizing: border-box
  transition: left .2s ease-in, margin .2s ease-in
