.account-container.inner-container.small-container
  #account-form
    .title-page 
      .circle
        i.icon-user
      h1= t('Account data')
    form.form(action="/account", method="post", role="form")
      ul.form-errors
      .form-group
        label= t('Email')
        input.form-control(type='email', name='email', tabindex=1, placeholder=t('example@email.com'), value='#{citizen.email}')
      .form-group
        label #{t('First name')}
        input.form-control(type='text', id="firstName", name='firstName', tabindex=2, placeholder=t('First name'), value='#{citizen.firstName}')
      .form-group
        label #{t('Last name')}
        input.form-control(type='text', id="lastName", name='lastName', tabindex=3, placeholder=t('Last name'), value='#{citizen.lastName}')
      .form-group
        label= t('Password')
        input.form-control(type='password', name='password', tabindex=4, placeholder=t('Password'))
      .form-group
        label= t('Re-type password')
        input.form-control(type='password', name='re_password', tabindex=5, placeholder=t('Repeat Password'))
      .form-group: input.btn.btn-success.btn-block.btn-lg(type='submit', tabindex=6, value=t('Save'))
  #account-message.hide
    h1= t('Account updated')
    p.lead.text-muted #{t("Your account has been updated.")}.
