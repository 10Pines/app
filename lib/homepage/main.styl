		margin-right: 20px;

	.comment-form
		margin-bottom: 50px;
		margin-top: 50px;
		textarea
			width: 500px;
		.btn 
			background-color: #333;
			color: white;

	.comment-list
		.comment-item
			margin-bottom: 20px;
			max-width: 580px;
			.pull-left
				width: 46px;
				margin-right: 20px;
				.avatar 
					width: 46px;
					height: 46px;
					border-radius: 100px;

