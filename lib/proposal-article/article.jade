article.proposal

  .meta-information
    a.meta-item.meta-location(href="#") Buenos Aires, Argentina
    small.meta-item.meta-timeago 10 days left

  span.proposal-type.flaticon.solid.government-1       

  h2=proposal.title
    
  //- .voting-process
    //- span.

  //- Mejorar esto!
  - var lines = proposal.essay.split('\n');
  - each line in lines
    - if (line.trim())
      p=line.trim()

  .participants
    - var plural = 1 === proposal.participants.length ? '' : 's'
      span #{proposal.participants.length} Participant#{plural}

    - each participant in proposal.participants
      a.participant-profile(href="javascript:void();", title=participant.fullName)
        img.avatar(src=participant.avatar)

  .share-links
    a(target="_blank", href="http://www.facebook.com/sharer.php?u="+location.url).flaticon.social.facebook  
    a(target="_blank", href="http://twitter.com/share?text=An%20Awesome%20Link&url="+location.url).flaticon.social.twitter  
    a(target="_blank", href="https://plus.google.com/share?url="+location.url).flaticon.social.google-plus 