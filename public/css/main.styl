/* General
-------------------------------------------------- */

html
	-webkit-font-smoothing: antialiased; 

h1,h2,h3,h4,h5,h6
	font-family: "freight-sans-pro",sans-serif;

a 
	color: black;

body.home 
	overflow: hidden;

header.app-header, section.app-content, aside.nav-proposal
	position: fixed;

header_height = 60px;
spacing = 30px;

header.app-header
	top: 0;
	left: 0;
	right: 0;
	height: header_height;
	background: #00b3eb;
	color: white;
	padding-left: spacing;
	font-weight: bold;
	text-transform: uppercase;
	font-size: 12px;

	a 
		color: white;

	h1 
		display: inline-block;
		width: 300px;
		font-size: 12px;

	nav 
		display: inline-block;
		height: header_height;
		ul 
			li 
				display: inline-block;
				a 
					margin-right: 30px;

	ul.user-nav 
		display: inline-block;
		float: right;
		margin-top: 20px;
		list-style: none;
		margin-right: spacing;
		li 
			display: inline-block;
			margin-left: 30px;

aside.nav-proposal 
	top: header_height;
	left: 0;
	bottom: 0;
	width: 280px;
	border-right: 1px solid #999;
	overflow-y: scroll;
	li 
		border-bottom: 1px solid #ccc;
		a 
			padding-left: spacing;
			padding-top: 20px;
			padding-bottom: 20px;
			color: black;
			span.title
				font-size: 16px;
				font-weight: bold;
				display: block;
				margin-bottom: 10px;

			span.created-by
				font-size: 11px;
				opacity: .5;

		&.active 
			a 
				background: #f9f9f9;

section.app-content
	left: 250px;
	top: header_height;
	padding: 20px 100px;
	overflow-y: scroll;
	right: 0;
	bottom: 0;

	article.proposal
		width: 560px;
		margin: auto;

		h2 
			margin-bottom: 20px;

		.meta-data
			margin-bottom: 20px;
			font-size: 12px;
			a.meta-item
				margin-right: 30px;
				color: #666;

				&.meta-tag, &.meta-delegation
					float: right;
					margin-left: 30px;

				&:last-child
					margin-right: 0;

		hr 
			border-top: 4px solid #eee;
			width: 50%;
		.footer-notes 
			color: #666;
